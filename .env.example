# Database
POSTGRES_URL="postgresql://user:password@localhost:5432/graphbug"

# NextAuth
AUTH_SECRET="your-random-secret-here"  # Generate with: openssl rand -base64 32
AUTH_TRUST_HOST=true  # Trust all hosts (required for NextAuth v5 in development)
NEXTAUTH_URL="http://localhost:3000"

# GitHub OAuth (for user login)
AUTH_GITHUB_ID="your-github-oauth-app-client-id"
AUTH_GITHUB_SECRET="your-github-oauth-app-client-secret"

# Google OAuth (for user login)
AUTH_GOOGLE_ID="your-google-oauth-client-id"
AUTH_GOOGLE_SECRET="your-google-oauth-client-secret"

# Resend (for magic links)
AUTH_RESEND_KEY="your-resend-api-key"

# GitHub App (for repository access)
NEXT_PUBLIC_GITHUB_APP_NAME="your-github-app-name"
NEXT_PUBLIC_GITHUB_APP_ID="your-github-app-id"
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nyour-private-key-here\n-----END RSA PRIVATE KEY-----"
GITHUB_WEBHOOK_SECRET="your-webhook-secret"

# AI Service
NEXT_PUBLIC_AI_SERVICE_URL="http://localhost:8000"
